{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "botName": {
      "type": "string",
      "metadata": {
        "description": "The name of the bot. Must be globally unique."
      }
    },
    "appServicePlanName": {
      "type": "string",
      "defaultValue": "[concat(parameters('botName'), '-plan')]",
      "metadata": {
        "description": "The name of the App Service Plan."
      }
    },
    "appServiceName": {
      "type": "string",
      "defaultValue": "[concat(parameters('botName'), '-app')]",
      "metadata": {
        "description": "The name of the App Service."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "sku": {
      "type": "string",
      "defaultValue": "B1",
      "allowedValues": ["F1", "B1", "B2", "S1", "S2", "P1v2"],
      "metadata": {
        "description": "The SKU of the App Service Plan."
      }
    },
    "microsoftAppId": {
      "type": "string",
      "metadata": {
        "description": "Microsoft App ID for the bot (from Azure AD app registration)."
      }
    },
    "microsoftAppPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Microsoft App Password for the bot."
      }
    },
    "copilotTokenEndpoint": {
      "type": "string",
      "metadata": {
        "description": "Copilot Studio Token Endpoint URL."
      }
    },
    "speechResourceId": {
      "type": "string",
      "metadata": {
        "description": "Full resource ID of the Azure Speech resource for DLS channel."
      }
    },
    "speechRegion": {
      "type": "string",
      "defaultValue": "eastus",
      "metadata": {
        "description": "Region of the Azure Speech resource."
      }
    }
  },
  "variables": {
    "botEndpoint": "[concat('https://', parameters('appServiceName'), '.azurewebsites.net/api/messages')]"
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2022-03-01",
      "name": "[parameters('appServicePlanName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[parameters('sku')]"
      },
      "kind": "linux",
      "properties": {
        "reserved": true
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-03-01",
      "name": "[parameters('appServiceName')]",
      "location": "[parameters('location')]",
      "kind": "app,linux",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]"
      ],
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]",
        "siteConfig": {
          "linuxFxVersion": "NODE|18-lts",
          "appSettings": [
            {
              "name": "MICROSOFT_APP_ID",
              "value": "[parameters('microsoftAppId')]"
            },
            {
              "name": "MICROSOFT_APP_PASSWORD",
              "value": "[parameters('microsoftAppPassword')]"
            },
            {
              "name": "MICROSOFT_APP_TYPE",
              "value": "MultiTenant"
            },
            {
              "name": "COPILOT_TOKEN_ENDPOINT",
              "value": "[parameters('copilotTokenEndpoint')]"
            },
            {
              "name": "WEBSITE_NODE_DEFAULT_VERSION",
              "value": "~18"
            },
            {
              "name": "SCM_DO_BUILD_DURING_DEPLOYMENT",
              "value": "true"
            }
          ],
          "alwaysOn": true
        },
        "httpsOnly": true
      }
    },
    {
      "type": "Microsoft.BotService/botServices",
      "apiVersion": "2022-09-15",
      "name": "[parameters('botName')]",
      "location": "global",
      "kind": "azurebot",
      "sku": {
        "name": "S1"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', parameters('appServiceName'))]"
      ],
      "properties": {
        "displayName": "[parameters('botName')]",
        "endpoint": "[variables('botEndpoint')]",
        "msaAppId": "[parameters('microsoftAppId')]",
        "msaAppType": "MultiTenant",
        "schemaTransformationVersion": "1.3"
      }
    },
    {
      "type": "Microsoft.BotService/botServices/channels",
      "apiVersion": "2022-09-15",
      "name": "[concat(parameters('botName'), '/DirectLineSpeechChannel')]",
      "location": "global",
      "dependsOn": [
        "[resourceId('Microsoft.BotService/botServices', parameters('botName'))]"
      ],
      "properties": {
        "channelName": "DirectLineSpeechChannel",
        "properties": {
          "cognitiveServiceResourceId": "[parameters('speechResourceId')]",
          "cognitiveServiceRegion": "[parameters('speechRegion')]",
          "isEnabled": true
        }
      }
    },
    {
      "type": "Microsoft.BotService/botServices/channels",
      "apiVersion": "2022-09-15",
      "name": "[concat(parameters('botName'), '/WebChatChannel')]",
      "location": "global",
      "dependsOn": [
        "[resourceId('Microsoft.BotService/botServices', parameters('botName'))]"
      ],
      "properties": {
        "channelName": "WebChatChannel",
        "properties": {}
      }
    }
  ],
  "outputs": {
    "botEndpoint": {
      "type": "string",
      "value": "[variables('botEndpoint')]"
    },
    "appServiceUrl": {
      "type": "string",
      "value": "[concat('https://', parameters('appServiceName'), '.azurewebsites.net')]"
    },
    "botServiceName": {
      "type": "string",
      "value": "[parameters('botName')]"
    }
  }
}
